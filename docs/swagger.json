    "definitions": {
        "entity.Login": {
            "type": "object",
            "properties": {
                "email": {
                    "type": "string",
                    "example": "manager@company.com"
                },
                "password": {
                    "type": "string",
                    "example": "password123"
                }
            }
        },
        "handlers.CreateTaskBody": {
            "type": "object",
            "required": [
                "name",
                "status",
                "summary"
            ],
            "properties": {
                "name": {
                    "type": "string",
                    "maxLength": 100,
                    "minLength": 5,
                    "example": "Test 1"
                },
                "status": {
                    "type": "string",
                    "enum": [
                        "active",
                        "inactive",
                        "pending",
                        "complete"
                    ],
                    "example": "pending"
                },
                "summary": {
                    "type": "string",
                    "maxLength": 200,
                    "minLength": 10,
                    "example": "Summary Test 1"
                }
            }
        },
